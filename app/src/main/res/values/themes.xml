<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AkNewsClient" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:ambientShadowAlpha">0.07</item>
        <item name="android:spotShadowAlpha">0.07</item>
        <item name="android:windowBackground">@drawable/img_splash_new</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:ambientShadowAlpha">0.07</item>
        <item name="android:spotShadowAlpha">0.07</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/gray5</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/sel_radio_red</item>
        <item name="fontFamily">@font/exo_reg</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textColor">@color/sel_radio_red</item>
        <item name="android:textSize">@dimen/size_l</item>
    </style>
</resources>